yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa
# .. more yabai startup stuff
# default layout (can be bsp, stack or float)
yabai -m config layout bsp
# new window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child
# on or off (default: off)
yabai -m config auto_balance on
# padding set to 12px
yabai -m config top_padding 0
yabai -m config bottom_padding 0
yabai -m config left_padding 0
yabai -m config right_padding 0
yabai -m config window_gap 0
yabai -m config split_ratio 0.5
yabai -m config active_window_opacity 1
yabai -m config normal_window_opacity 1
# -- mouse settings --

# center mouse on window with focus
yabai -m config mouse_follows_focus on
yabai -m config focus_follows_mouse autoraise
# modifier for clicking and dragging with mouse
yabai -m config mouse_modifier alt
# set modifier + left-click drag to move window
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window
yabai -m config mouse_action2 resize

# when window is dropped in center of another window, swap them (on edges it will split it)
function setup_space {
  local idx="$1"
  local name="$2"
  local space=
  echo "setup space $idx : $name"

  space=$(yabai -m query --spaces --space "$idx")
  if [ -z "$space" ]; then
    yabai -m space --create
  fi

  yabai -m space "$idx" --label "$name"
}

setup_space 1 zen
setup_space 2 outlooktodo
setup_space 3 ghostteams
setup_space 4 open
setup_space 5 open2


# disable specific apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^FaceTime" manage=off

#Space 1: Zen
yabai -m rule --add app="^Zen$" space=1
#space 2: Outlook 
yabai -m rule --add app="^Microsoft Outlook$" space=2
#space 3: todosit and Teams
yabai -m rule --add app="^Microsoft Teams$" space=3
yabai -m rule --add app="^Todoist$" space=3
#space 4: Ghostty and messages
yabai -m rule --add app="^Messages$" space=4
yabai -m rule --add app="^Ghostty$" space=4
#space 5: warp
yabai -m rule --add app="^Warp$" space=5
#space 6: toggl track and finder
yabai -m rule --add app="^Toggl Track$" space=6
yabai -m rule --add app="^Finder$" space=6
